<%= form_for @project_agw_config, :url => { :controller => 'project_agw_config', :action=> 'update', :project_id => @project } do |f| %>

<div class="box tabular">
  <p>
    <%= label(:project_agw_config, :wikis_subdir) %>
    <%= f.text_field :wikis_subdir %>
  </p>
  <p>
    <%= label(:project_agw_config, :markup_language) %>
    <%= f.select(:markup_language, options_for_select(Hash[Gollum::Markup::formats.map {|x| [x[1][:name], x[0]]}], @project_agw_config[:markup_language])) %></p>
  </p>
</div>

  <p><%= f.submit(:value=>:save) %></p>
<% end %>
